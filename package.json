{
  "name": "us-weather",
  "version": "0.0.0",
  "description": "web app to display weather info from the NWS",
  "license": "MIT",
  "author": "Patrick Mueller <pmuellr@apache.org> (https://github.com/pmuellr)",
  "homepage": "https://github.com/pmuellr/us-weather",
  "scripts": {
    "build": "tools/build.sh",
    "check-deps": "tools/check-deps.sh",
    "standard": "standard --verbose",
    "utest": "tap test/test-*.js",
    "test": "standard --verbose && npm -s run utest",
    "watch": "nodemon --exec 'npm run -s standard && npm run -s build && npm run -s server'",
    "server": "node --inspect=9230 server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pmuellr/us-weather.git"
  },
  "bugs": {
    "url": "https://github.com/pmuellr/us-weather/issues"
  },
  "standard": {
    "ignore": [
      "tmp/**",
      "docs/**"
    ]
  },
  "nodemonConfig": {
    "ext": "js,jsx,json,css,less,html,sh",
    "ignore": [
      "docs/*"
    ],
    "delay": "1000"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "d3": "^5.7.0",
    "dependency-check": "^3.3.0",
    "express": "^4.16.4",
    "leaflet": "^1.4.0",
    "less": "^3.9.0",
    "nodemon": "^1.18.9",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "standard": "^12.0.1",
    "tap": "^12.4.0",
    "uuid": "^3.3.2",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  }
}
